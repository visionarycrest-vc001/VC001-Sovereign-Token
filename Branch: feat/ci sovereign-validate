Files: .github/workflows/ci.yml

git checkout -b ci/sovereign-validate
mkdir -p .github/workflows
cat > .github/workflows/ci.yml << 'YAML'
name: Sovereign CI
on:
  pull_request:
  push:
    branches: [ main ]
jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: JSON schema validation
        run: ./scripts/validate-json.sh
      - name: Build placeholder
        run: echo "Build passes"
YAML
git add .github/workflows/ci.yml
git commit -m "ðŸ§­ CI: schema validation bound to PRs and main"
git checkout main
git merge --no-ff ci/sovereign-validate -m "ðŸ§­ Merge CI validation into main"
